<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        app:cardCornerRadius="10dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">



            <androidx.cardview.widget.CardView
                android:layout_width="125dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/Img_resgambar"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ruangrapat1" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="16dp">


                <TextView
                    android:id="@+id/Tvnamaruangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruangan Rapat Seruni"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gambaricon"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/location_icon"/>

                    <TextView
                        android:id="@+id/Tvlokasiruangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Lantai 1"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvhargasewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="Rp50.000 / Jam"
                    android:textColor="@color/gradient_start_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>