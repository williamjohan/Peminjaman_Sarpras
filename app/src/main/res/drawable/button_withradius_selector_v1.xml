<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF3700B3"/> <!-- Ganti dengan warna saat ditekan -->
            <corners android:radius="16dp"/>
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/gradient_start_color"/> <!-- Ganti dengan warna normal -->
            <corners android:radius="16dp"/>
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp"/>
        </shape>
    </item>
</selector>
